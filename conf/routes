# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.ProductController.index()

# Get prices for skus
GET     /pricing/price              controllers.PricingController.getPrice(sku: String)
GET     /pricing/prices             controllers.PricingController.getPrices(skus: java.util.List[String])

# Controller for checkout
GET     /checkout                   controllers.CheckoutController.index()
POST    /checkout                   controllers.CheckoutController.checkout()



# Test endpoint for async computation
GET     /test/fibonacci             controllers.ApplicationController.fibonacci(limit: Integer)

# Routes for websocket
GET     /ws/product                 controllers.ProductController.webSocket()
GET     /ws/orders                  controllers.OrderDashboardController.webSocket()
# Test endpoint for websockets
GET     /ws/product/testupdate          controllers.ProductController.testUpdate()
GET     /ws/orders/testupdate           controllers.OrderDashboardController.testUpdate()

# Routes for account
GET     /account                    controllers.AccountController.account()
GET     /login                      controllers.AccountController.account()
POST    /login                      controllers.AccountController.login()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
